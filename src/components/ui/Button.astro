---
interface ButtonProps {
  text: string;
  href?: string;
  type?: "button" | "submit" | "reset";
  className?: string;
}

const { text, href, type = "button", className = "" } = Astro.props as ButtonProps;
---

{href ? (
  <a href={href} class={`button ${className}`}>
    {text}
  </a>
) : (
  <button type={type} class={`button ${className}`}>
    {text}
  </button>
)}