---
import type { CollectionEntry } from "astro:content";

const { post }: { post?: CollectionEntry<"blog"> } = Astro.props;

const formatDate = (date: Date) => {
  const month = date.getMonth() + 1; // Months are 0-indexed
  const day = date.getDate();
  const year = date.getFullYear();
  return `${month}•${day}•${year}`;
};

const postDescription = post ? post.data.description : "";
const postTitle = post ? post.data.title : "";
const shortenedPostDescription =
  postDescription.split(" ").slice(0, 15).join(" ") +
  (postDescription.split(" ").length > 15 ? "..." : "");
const postDate = post ? formatDate(post.data.publishDate) : "";
---

<section class="flex-col-1 my-auto ml-6 drop-shadow-2xl">
  <a href={`/blog/${post?.slug}/`}>
    <div
      class="relative w-[320px] h-[210px] sm:w-[410px] sm:h-[180px] md:w-[500px] 2xl:w-[600px] md:h-[170px] flex py-5 rounded-3xl bg-[#F9DCB1] bg-opacity-50"
      style={{ backdropFilter: "blur(35px)" }}
      onclick="window.location.href = `/blog/${post?.slug}/`"
    >
      <!-- Image Container -->
      <div class="absolute top-6 -left-9 md:top-3 md:-left-5">
        <img
          src="https://placehold.co/350x350/png"
          alt="Blog tag photo"
          class="w-[100px] 2xl:w-[115px] h-auto rounded-2xl"
        />
      </div>

      <!-- Text and Description -->
      <div
        class="ml-16 md:ml-20 2xl:ml-24 px-4 flex-grow flex items-center justify-between"
      >
        <div>
          <h1 class="font-bold text-2xl">{postTitle}</h1>
          <h2 class="py-2">{shortenedPostDescription}</h2>
        </div>
        <!-- Date -->
        <p class="absolute bottom-2 right-3 font-bold">
          {postDate}
        </p>
      </div>
    </div>
  </a>
</section>
