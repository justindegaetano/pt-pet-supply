---
interface NavbarProps {
  currentPage: string;
}

import Button from "../ui/Button.astro"
import OpenStatus from "../ui/OpenStatus.astro"

const currentPage = Astro.url.pathname;
---

<section>
  <div>
    <!-- Phone Number here -->
  </div>

  <div>
    <!-- Location Pin here -->
  </div>

  <OpenStatus />

  <Button text="Products" href="/#products" />
  <Button text="About Us" href="/#about" />
  <!-- Conditionally render the button based on the current page -->
  {currentPage !== '/grooming' && (
    <Button text="Grooming Services" href="/grooming" />
  )}
</section>