---
// Links.astro

interface LinksProps {
  currentPage: string;
}

import Button from "../ui/Button.astro";

const currentPage = Astro.url.pathname as LinksProps["currentPage"];
---

<div class="flex text-xl font-bold space-x-4">
  {
    currentPage == "/grooming" && (
      <Button
        transition:animate="slide"
        text="Home"
        href="/"
        class="pl-4"
        data-astro-prefetch
      />
    )
  }
  <Button
    transition:animate="slide"
    text="Products"
    href="/#products"
    class="pl-4"
  />
  <Button
    transition:animate="slide"
    text="Our Pack"
    href="/#staff"
    class="pl-4"
  />
  <Button transition:animate="slide" text="Blog" href="/#blog" class="pl-6" />
  {
    currentPage !== "/grooming" && (
      <Button
        transition:animate="slide"
        text="Pet Grooming"
        href="/grooming"
        class="pl-4"
        data-astro-prefetch
      />
    )
  }
</div>
