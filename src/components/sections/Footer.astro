---
import { officialStoreInfo } from "../../constants/storeInfo";

const name = officialStoreInfo().name;
const address = officialStoreInfo().address;
---

<section class="text-center py-6 bg-[#FFC66D] -mt-1">
  <div class="font-bold tracking-widest">
    <h2 class="text-lg md:text-xl">{name}</h2>
    <h2 class="text-sm md:text-md">{address} MA</h2>
    <h3 class="text-sm md:text-md">Serving The Community Since 2004</h3>
  </div>
  <h3 class="text-widest text-base pt-4 md:text-md">
    <a href="https://www.jdegaetano.com" target="_blank"
      >Designed and Developed by Justin DeGaetano</a
    >
  </h3>
</section>
